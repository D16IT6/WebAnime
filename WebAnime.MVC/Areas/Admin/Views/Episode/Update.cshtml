@using DataModels.EF
@model WebAnime.MVC.Areas.Admin.Models.EpisodeViewModel

@{
    ViewBag.Title = "Cập nhật";
    var anime = ViewBag.Anime as Animes;
    var servers = ViewBag.Servers as IEnumerable<Servers>;
}

<h3>Cập nhật cho <span class="text-danger">@anime.Title</span></h3>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="row mb-4">
        @Html.LabelFor(x => x.Title, new { @class = "col-1 col-form-label fw-bold" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-4">
        @Html.LabelFor(x => x.Order, new { @class = "col-1 col-form-label fw-bold" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.Order, new { @class = "form-control", type = "number", min = "1", max = "9999", placeholder = "1 tới 9999" })
            @Html.ValidationMessageFor(x => x.Order, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-4">
        @Html.LabelFor(x => x.Url, new { @class = "col-1 col-form-label fw-bold" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Url, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-4">
        @Html.LabelFor(x => x.ServerId, new { @class = "col-1 col-form-label fw-bold" })
        <div class="col-8">
            @Html.DropDownListFor(x => x.ServerId, new SelectList(servers, "Id", "Name"), new { @class = "form-select" })
            @Html.ValidationMessageFor(x => x.ServerId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="col">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </div>
}
@Html.ActionLink("Quay về","Index",new {@animeId = anime.Id},new {@class="btn btn-primary"})