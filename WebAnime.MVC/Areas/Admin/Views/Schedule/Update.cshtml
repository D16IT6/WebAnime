<h2>Sửa</h2>

@using (Html.BeginForm("Update", "Schedule", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.AiringDate, htmlAttributes: new { @class = "control-label col-md-3 my-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AiringDate, new { htmlAttributes = new { type="date",@class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AiringDate, "", new { @class = "text-danger" })
            </div>
        </div>  

        <div class="form-group">
            @Html.LabelFor(model => model.AiringTime, htmlAttributes: new { @class = "control-label col-md-3 my-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AiringTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @*data_value = builder*@
                @Html.ValidationMessageFor(model => model.AiringTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" />
                @Html.ActionLink("Quay lại", "Index", new { area = "Admin", animeId }, new { @class = "btn btn-default my-3" })
            </div>
        </div>
    </div>
}


@section footerJs{
    <script>
        const time = $(`#Time`);

        const trueValue = time.data('value');
        time.val(trueValue);
    </script>
}