@model ViewModels.Admin.ScheduleViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int animeId = ViewBag.AnimeId ?? 0;
    var time = Model.Time;
    var year = (time.Year + "");
    var month = (time.Month + "");
    var day = (time.Day + "").PadLeft(2, '0');
    var hours = (time.Hour + "").PadLeft(2, '0');
    var minutes = (time.Minute + "").PadLeft(2, '0');
    var seconds = (time.Second + "").PadLeft(2, '0');

    var builder = $"{year}-{month}-{day}T{hours}:{minutes}:{seconds}";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Schedule", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ScheduleViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.DayOfWeek, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DayOfWeek, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DayOfWeek, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", data_value = builder } })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { area = "Admin", animeId }, new { @class = "my-3" })
</div>
@section footerJs{
    <script>
        const time = $(`#Time`);

        const trueValue = time.data('value');
        time.val(trueValue);
    </script>
}